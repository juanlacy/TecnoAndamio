# ========================================
# CONFIGURACIÓN PARA PRODUCCIÓN
# ========================================
# IMPORTANTE: Este archivo debe copiarse al servidor como .env
# NUNCA commitear este archivo con valores reales a Git

# Server Configuration
NODE_ENV=production
PORT=9000
API_VERSION=v1

# Database Configuration - ACTUALIZAR CON TUS VALORES REALES
DB_HOST=localhost
DB_PORT=3306
DB_NAME=tecnoandamios_db
DB_USER=tecnoandamios_user
DB_PASSWORD=CAMBIAR_ESTE_PASSWORD_EN_PRODUCCION
DB_DIALECT=mysql
DB_LOGGING=false

# JWT Configuration - CRÍTICO: CAMBIAR ESTOS VALORES
# Generar un JWT_SECRET seguro con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CAMBIAR_ESTE_SECRET_POR_UNO_GENERADO_ALEATORIAMENTE_MINIMO_64_CARACTERES
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=CAMBIAR_ESTE_SECRET_POR_UNO_GENERADO_ALEATORIAMENTE
SESSION_MAX_AGE=86400000

# CORS Configuration - IMPORTANTE: Usar el dominio real
CORS_ORIGIN=https://tecnoandamio.huelemu.com.ar
CORS_CREDENTIALS=true

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Frontend URL - Dominio real de producción
FRONTEND_URL=https://tecnoandamio.huelemu.com.ar

# API Documentation - Deshabilitar en producción por seguridad
SWAGGER_ENABLED=false
